{
  "name": "@itwin/insights-client",
  "version": "0.2.1",
  "description": "Insights client for the iTwin platform",
  "main": "lib/cjs/insights-client.js",
  "module": "lib/esm/insights-client.js",
  "typings": "lib/cjs/insights-client",
  "scripts": {
    "build": "npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs",
    "build:esm": "tsc 1>&2 --module es6 --outDir lib/esm",
    "copy": "cp package.json lib/ && cp README.md lib/ && cp .npmrc lib/",
    "lint": "eslint \"*/**/*.{js,ts}\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:copyright": "node scripts/copyright-linter.js",
    "pack": "npm pack",
    "cover": "nyc mocha lib/cjs/**/*.test.js",
    "test:integration": "mocha lib/cjs/**/*.test.js --color --timeout 180000"
  },
  "keywords": [
    "Bentley",
    "iTwin",
    "digital-twin",
    "insights",
    "reporting",
    "carbon calculation",
    "IModelHub"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/insights-client"
  },
  "dependencies": {
    "@bentley/oidc-signin-tool": "^2.19.28",
    "chromium": "^3.0.3",
    "cross-fetch": "^3.1.4",
    "node-fetch": "^3.2.6"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@itwin/build-tools": "^3.0.0",
    "@itwin/core-bentley": "^3.0.0",
    "@itwin/eslint-plugin": "^3.0.0",
    "@itwin/oidc-signin-tool": "^3.2.0",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.31",
    "chai": "^4.1.2",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "eslint": "^7.11.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "source-map-loader": "^1.0.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.8.2",
    "typescript": "~4.4.0"
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/itwinjs-recommended",
    "rules": {
      "no-duplicate-imports": "off",
      "@typescript-eslint/consistent-type-imports": "error"
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": "**/test/*",
    "check-coverage": true
  }
}
