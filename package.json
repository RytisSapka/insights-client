{
  "name": "@itwin/insights-client",
  "version": "0.2.1",
  "description": "Insights client for the iTwin platform",
  "main": "lib/cjs/insights-client.js",
  "module": "lib/esm/insights-client.js",
  "typings": "lib/cjs/insights-client",
  "scripts": {
    "build": "npm run -s build:cjs && npm run -s build:esm && npm run copy",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs",
    "build:esm": "tsc 1>&2 --module es6 --outDir lib/esm",
    "copy": "copyfiles -u 4 src/integration-test/imodels-client-test-utils/src/assets/* src/integration-test/imodels-client-test-utils/src/assets/changesets/* lib/cjs/integration-test/imodels-client-test-utils/src",
    "lint": "eslint \"*/**/*.{js,ts}\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:copyright": "node scripts/copyright-linter.js",
    "pack": "npm pack",
    "cover": "nyc mocha lib/cjs/integration-test/**/*.test.js",
    "test:integration": "mocha lib/cjs/integration-test/**/ReportsClient.test.js --color",
    "test:unit": "mocha lib/cjs/test/**/*.test.js --color"
  },
  "keywords": [
    "Bentley",
    "iTwin",
    "digital-twin",
    "insights",
    "reporting",
    "carbon calculation",
    "IModelHub"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/insights-client"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.11.0",
    "@bentley/oidc-signin-tool": "^2.19.28",
    "axios": "^0.27.2",
    "chai-as-promised": "^7.1.1",
    "chromium": "^3.0.3",
    "copyfiles": "^2.4.1",
    "cross-fetch": "^3.1.4",
    "inversify": "^6.0.1",
    "isomorphic-fetch": "^3.0.0",
    "node-fetch": "^3.2.6",
    "reflect-metadata": "^0.1.13",
    "sinon": "^14.0.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@itwin/build-tools": "^3.0.0",
    "@itwin/core-bentley": "^3.0.0",
    "@itwin/eslint-plugin": "^3.0.0",
    "@itwin/oidc-signin-tool": "^3.2.0",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.18.22",
    "@types/sinon": "^10.0.13",
    "chai": "^4.1.2",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "eslint": "^7.11.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "source-map-loader": "^1.0.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.8.2",
    "typescript": "~4.4.0"
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/itwinjs-recommended",
    "rules": {
      "no-duplicate-imports": "off",
      "@typescript-eslint/consistent-type-imports": "error"
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/test/*"
    ],
    "check-coverage": true,
    "report-dir": "lib/test/coverage",
    "reporter": [
      "text-summary",
      "lcov",
      "cobertura"
    ]
  },
  "mocha": {
    "timeout": 420000
  }
}
